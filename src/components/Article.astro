---
const { author, title, image } = Astro.props;
---

<li class='my-16'>
  <img class='rounded-t-lg mb-10' src={image} alt='article image' />
  <div class='w-5/6 mx-auto'>
    <small class='text-[var(--clr-neutral-blue)]'>By {author}</small>
    <h1 class='text-xl my-2'>{title}</h1>
    <div class="text-[var(--clr-neutral-blue)]">
      <slot />
    </div>
  </div>
</li>
